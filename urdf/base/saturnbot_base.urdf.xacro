<?xml version="1.0"?>

<robot name="saturnbot_base" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:property name="length_wheel" value="0.027" />
	<xacro:property name="radius_wheel" value="0.0325" />
	<xacro:property name="camera_link" value="0.05" />
	<xacro:macro name="default_inertial" params="mass">
               <inertial>
                       <mass value="${mass}" />
                       <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                                iyy="1.0" iyz="0.0"
                                izz="1.0" />
               </inertial>
	</xacro:macro>
  <xacro:include filename="$(find saturnbot_description)/urdf/saturnbot_properties.urdf.xacro" />
	<link name="base_footprint">
   		<visual>
			<geometry>
      				<box size="0.001 0.001 0.001"/>
     			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0"/>
   		</visual>
		<!--<xacro:default_inertial mass="0.0001"/>-->
 	</link>

	<gazebo reference="base_footprint">
		<material>Gazebo/Green</material>
		<turnGravityOff>false</turnGravityOff>
	</gazebo>

	<joint name="base_footprint_joint" type="fixed">
		<origin xyz="0 0 0" />
		<parent link="base_footprint" />
		<child link="base_link" />
	</joint>


	<link name="base_link">
   		<visual>
			<geometry>
      				<box size="0.119 0.185 0.05"/>
     			</geometry>
			<origin rpy="0 0 1.54" xyz="0 0 0.021"/>
			<material name="white">
				<color rgba="1 1 1 1"/>
			</material>
   		</visual>
		<collision>
			<geometry>
       				<box size="0.119 0.185 0.05"/>
			</geometry>
		</collision>
		<xacro:default_inertial mass="1.5"/>
 	</link>

 	<link name="wheel_left">
   		<visual>
     			<geometry>
       				<cylinder length="${length_wheel}" radius="${radius_wheel}"/>
     			</geometry>
			<!-- <origin rpy="0 1.5 0" xyz="0.1 0.1 0"/> -->
			<origin rpy="0 0 0" xyz="0 0 0"/>
   			<material name="black">
				<color rgba="0 0 0 1"/>
			</material>
		</visual>
		<collision>
			<geometry>
       				<cylinder length="${length_wheel}" radius="${radius_wheel}"/>
			</geometry>
		</collision>
		<xacro:default_inertial mass="0.1"/>
 	</link>

 	<link name="wheel_right">
   		<visual>
     			<geometry>
       				<cylinder length="${length_wheel}" radius="${radius_wheel}"/>
     			</geometry>
			<!-- <origin rpy="0 1.5 0" xyz="-0.1 0.1 0"/> -->
			<origin rpy="0 0 0" xyz="0 0 0"/>
   			<material name="black"/>
   		</visual>
		<collision>
			<geometry>
       				<cylinder length="${length_wheel}" radius="${radius_wheel}"/>
			</geometry>
		</collision>
		<xacro:default_inertial mass="0.1"/>

 	</link>

 	<link name="caster_wheel">
   		<visual>
     			<geometry>
       				<sphere radius="0.021"/>
     			</geometry>
			<!-- <origin rpy="0 1.5 0" xyz="0.1 -0.1 0"/> -->

			<origin rpy="0 0 0" xyz="0 0 0"/>
   			<material name="black"/>
   		</visual>
		<collision>
			<geometry>
       				<sphere radius="${radius_wheel}"/>
			</geometry>
		</collision>
		<xacro:default_inertial mass="0.1"/>
 	</link>

 <joint name="base_to_wheel_left" type="continuous">
   <parent link="base_link"/>
   <child link="wheel_left"/>
   <origin rpy="-1.5707 0 0" xyz="-0.071 0.083 0"/>
   <axis xyz="0 0 1" />
 </joint>

 <joint name="base_to_wheel_right" type="continuous">
   <axis xyz="0 0 1" />
   <anchor xyz="0 0 0" />
   <limit effort="100" velocity="100" />
   <parent link="base_link"/>
   <child link="wheel_right"/>
   <origin rpy="-1.5707 0 0" xyz="-0.071 -0.083 0"/>
</joint>

 <joint name="base_to_caster_wheel" type="continuous">
   <parent link="base_link"/>
   <axis xyz="0 0 1" />
   <child link="caster_wheel"/>
   <origin rpy="-1.5707 0 0" xyz="0.071 0 0"/>
 </joint>

</robot>
